{
  "manifest_version": 3,
  "name": "Canvas GPA Calculator",
  "version": "1.0",
  "description": "A Chrome extension that scrapes numbers or text from a webpage.",
  "permissions": [ "scripting", "storage"],
  
  "action": {
    "default_popup": "menus/menu.html",
    "default_icon": "logo.png",
    "default_title": "Calculator"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/courses/*/grades","http://*.instructure.com/courses/*/grades","https://*.instructure.com/", "http://*.instructure.com/"],
      "js": ["scripts/content.js"],
      "run_at" : "document_end"
    }
  ]
}
